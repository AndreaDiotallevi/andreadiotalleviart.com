---
interface Props {
    id: string
    buttonText: string
    errorMessage: string
    successMessage?: string
}

const { id, buttonText, errorMessage, successMessage } = Astro.props
---

<button
    id={id}
    type="submit"
    class="flex items-center justify-center w-full rounded-lg bg-black px-4 py-3 text-white hover:bg-gray-800"
>
    <svg
        id="loading-spinner"
        class="mr-3 h-5 w-5 animate-spin text-white hidden"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
    >
        <circle
            class="opacity-25"
            cx="12"
            cy="12"
            r="10"
            stroke="currentColor"
            stroke-width="4"></circle>
        <path
            fill="currentColor"
            d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
        ></path>
    </svg>

    <span id="button-text" class="font-semibold">{buttonText}</span>
</button>

{
    errorMessage ? (
        <p id="error-message" style="color: rgb(198, 53, 53);" class="hidden">
            {errorMessage}
        </p>
    ) : null
}

{
    successMessage ? (
        <p id="success-message" style="color: rgb(33, 91, 33);" class="hidden">
            {successMessage}
        </p>
    ) : null
}
