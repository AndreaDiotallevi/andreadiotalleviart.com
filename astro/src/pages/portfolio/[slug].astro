---
import BackToLink from "@components/BackToLink.astro"
import LocaleSelector from "@components/LocaleSelector.astro"
import BaseLayout from "@layouts/BaseLayout.astro"
import Carousel from "@components/Carousel.astro"
import { defaultLocale } from "@utils/currency"
import { getSelectedImageIndex } from "@utils/gallery"

import { getCollection } from "astro:content"
import { transformImage } from "@utils/cloudinary"

export async function getStaticPaths() {
    const artworks = await getCollection("artworks")

    return artworks.map(artwork => ({
        params: {
            slug: artwork.data.slug,
        },
        props: {
            artwork: {
                ...artwork.data,
                images: artwork.data.images.map(image => transformImage(image)),
            },
        },
    }))
}

const { artwork } = Astro.props
const selectedImageIndex = getSelectedImageIndex(Astro.url, artwork.images.length)
const selectedImage = artwork.images[selectedImageIndex] ?? artwork.images[0]
---

<BaseLayout
    title={`${artwork.name} | Andrea Diotallevi Art`}
    description={artwork.description}
    image={selectedImage}
    newsletter={false}
>
    <div
        class="flex flex-col md:flex-row items-center md:items-start px-4 py-8 pt-0 md:pt-8 max-w-screen-xl mx-auto text-gray-800"
    >
        <div class="w-full md:w-1/2 mb-6 md:mb-0 md:mr-8">
            <div class="md:hidden flex items-center justify-between mb-4">
                <BackToLink href="/portfolio" text="Back to portfolio" />
                <div class="flex items-center">
                    <label for="locale-selector-portfolio-mobile" class="sr-only">Region / language</label>
                    <LocaleSelector
                        id="locale-selector-portfolio-mobile"
                        ariaLabel="Region / language"
                        locale={defaultLocale}
                        class="border border-gray-300 rounded px-2 py-1 text-sm font-semibold"
                    />
                </div>
            </div>
            <h1 class="text-2xl font-bold mb-4 md:hidden">
                {artwork.name}
            </h1>
            <Carousel
                images={artwork.images}
                width={750}
                height={750}
                altBase={artwork.name}
                selectedIndex={selectedImageIndex}
            />
        </div>

        <div class="w-full md:w-1/2">
            <div class="hidden md:flex items-start justify-between mb-6">
                <h1 class="text-5xl font-bold">
                    {artwork.name}
                </h1>
                <div class="flex items-center">
                    <label for="locale-selector-portfolio" class="sr-only">Region / language</label>
                    <LocaleSelector
                        id="locale-selector-portfolio"
                        ariaLabel="Region / language"
                        locale={defaultLocale}
                        class="border border-gray-300 rounded px-2 py-1 text-sm md:text-base font-semibold"
                    />
                </div>
            </div>

            <div class="space-y-6">
                <div>
                    <p>{artwork.description}</p>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>
