<BaseLayout title="" description="">
    <div
        class="flex flex-col md:flex-row items-center md:items-start p-4 max-w-screen-xl mx-auto"
    >
        <div class="w-full md:w-1/2 mb-6 md:mb-0 md:mr-8">
            <div class="mb-4">
                <img src={""} alt={""} class="w-full h-auto rounded-lg" />
            </div>
        </div>

        <div class="w-full md:w-1/2">
            <h1 class="text-4xl font-bold mb-4">Thanks for your order!</h1>

            <div class="space-y-6">
