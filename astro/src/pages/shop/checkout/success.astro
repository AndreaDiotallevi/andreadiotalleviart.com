---
export const prerender = false

import { Image } from "@unpic/astro"
import BaseLayout from "@layouts/BaseLayout.astro"

import { formatCurrency } from "@utils/intl"
import { retrieveCheckoutSession } from "@utils/serverless"
import type { StripePrice } from "@utils/stripe"

const sessionId = Astro.url.searchParams.get("session_id") || ""
const session = await retrieveCheckoutSession({ sessionId })

const currency = session?.currency
const shippingDetails = session?.shipping_details

const success = !!(session && currency && shippingDetails)
---

<BaseLayout
    title="Checkout Success | Andrea Diotallevi Art"
    description="Thanks for your order! Check your email for order details and shipping information."
>
    <div
        id="success-page-content"
        class="flex flex-col md:flex-row items-center md:items-start justify-center px-4 py-8 pt-0 md:pt-8 max-w-screen-xl mx-auto"
        data-session={JSON.stringify(session)}
    >
        {
            success ? (
                <>
                    <div class="w-full md:w-1/2 mb-4 md:mb-0 md:mr-8">
                        <h1 class="text-4xl font-semibold md:hidden">
                            Thanks for your order!
                        </h1>
                        <Image
                            src={
                                session.line_items?.data[0].price?.product
                                    .images[0]
                            }
                            alt="Product Image"
                            class="w-full h-auto hidden md:block"
                            width={1000}
                            height={1414}
                        />
                    </div>

                    <div class="w-full md:w-1/2">
                        <h1 class="text-5xl font-semibold mb-6 hidden md:block">
                            Thanks for your order
                        </h1>
                        <div class="space-y-6">
                            <div>
                                <p>
                                    You will receive a confirmation email with
                                    the details of your order.
                                </p>
                            </div>
                            <div>
                                <h2 class="text-xl font-semibold mb-2">
                                    Delivery address
                                </h2>
                                <p>{shippingDetails.name}</p>
                                <p>
                                    {shippingDetails.address?.line1
                                        ? `${shippingDetails.address?.line1}, `
                                        : ""}
                                    {shippingDetails.address?.line2
                                        ? `${shippingDetails.address?.line2}, `
                                        : ""}
                                    {shippingDetails.address?.postal_code
                                        ? `${shippingDetails.address?.postal_code}, `
                                        : ""}
                                    {shippingDetails.address?.city
                                        ? `${shippingDetails.address?.city}, `
                                        : ""}
                                    {shippingDetails.address?.country
                                        ? `${shippingDetails.address?.country}`
                                        : ""}
                                </p>
                            </div>
                            <div>
                                <h2 class="text-xl font-semibold mb-2">
                                    Items
                                </h2>
                                <ol class="list-none space-y-2">
                                    {session.line_items?.data.map(item => {
                                        const price =
                                            item.price as unknown as StripePrice

                                        return (
                                            <li>
                                                {item.quantity} x{" "}
                                                {
                                                    price.product.metadata
                                                        .displayName
                                                }{" "}
                                                - {price.product.description}
                                            </li>
                                        )
                                    })}
                                </ol>
                            </div>
                            <div>
                                <h2 class="text-xl font-semibold mb-2">
                                    Payment summary
                                </h2>
                                <p>
                                    Subtotal:{" "}
                                    {formatCurrency({
                                        value: session.amount_subtotal!,
                                        currency,
                                    })}
                                    <br />
                                    Shipping: Free
                                    <br />
                                    Discounts:{" "}
                                    {formatCurrency({
                                        value: session.total_details
                                            ?.amount_discount!,
                                        currency,
                                    })}
                                    <br />
                                    Total:{" "}
                                    {formatCurrency({
                                        value: session.amount_total!,
                                        currency,
                                    })}
                                </p>
                            </div>
                        </div>

                        <div class="mt-6">
                            <a
                                href="/shop"
                                class="block w-full px-4 py-3 text-white bg-black rounded-lg hover:bg-gray-800 text-center font-semibold"
                            >
                                Discover more
                            </a>
                        </div>
                    </div>
                </>
            ) : (
                <p class="font-semibold min-h-[48px] border border-red-600 rounded-md bg-red-100 text-red-800 flex items-center px-4 py-2">
                    There was an error retrieving your session. Please try
                    refreshing the page.
                </p>
            )
        }
    </div>
</BaseLayout>

<script>
    import type Stripe from "stripe"
    import { sendGA4PurchaseEvent } from "@utils/ga4"

    document.addEventListener("astro:page-load", async () => {
        const successPageContent = document.getElementById(
            "success-page-content"
        )

        if (!successPageContent) return

        const session = JSON.parse(
            successPageContent.dataset.session!
        ) as Stripe.Checkout.Session

        if (session) {
            sendGA4PurchaseEvent({ session })
        }
    })
</script>
