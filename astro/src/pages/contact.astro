---
import { Image } from "astro:assets"
import BaseLayout from "../layouts/BaseLayout.astro"
import ContactImage from "../images/contact-image.jpg"
---

<BaseLayout title="Contact" description="">
    <div
        class="flex flex-col md:flex-row items-center md:items-start p-4 max-w-screen-xl mx-auto"
    >
        <!-- Image on the left -->
        <div class="w-full md:w-1/2 mb-6 md:mb-0 md:mr-8">
            <Image
                src={ContactImage}
                alt="Contact Image"
                class="w-full h-auto rounded-lg"
            />
        </div>

        <!-- Form on the right -->
        <div class="w-full md:w-1/2">
            <h1 class="text-4xl font-bold mb-4">Contact</h1>
            <form class="space-y-4">
                <div>
                    <label for="name" class="block text-lg font-medium mb-1"
                        >Name:</label
                    >
                    <input
                        id="name"
                        name="name"
                        type="text"
                        class="w-full px-3 py-2 border border-gray-800 rounded-md"
                        placeholder="Your Name"
                        autocomplete="name"
                        required
                    />
                </div>

                <div>
                    <label for="email" class="block text-lg font-medium mb-1"
                        >Email:</label
                    >
                    <input
                        id="email"
                        name="email"
                        type="email"
                        class="w-full px-3 py-2 border border-gray-800 rounded-md"
                        placeholder="Your Email"
                        autocomplete="email"
                        required
                    />
                </div>

                <div>
                    <label for="subject" class="block text-lg font-medium mb-1"
                        >Subject:</label
                    >
                    <input
                        id="subject"
                        name="subject"
                        type="text"
                        class="w-full px-3 py-2 border border-gray-800 rounded-md"
                        placeholder="Subject"
                        autocomplete="subject"
                        required
                    />
                </div>

                <div>
                    <label for="message" class="block text-lg font-medium mb-1"
                        >Message:</label
                    >
                    <textarea
                        id="message"
                        name="message"
                        class="w-full px-3 py-2 border border-gray-800 rounded-md"
                        rows="6"
                        placeholder="Your Message"
                        autocomplete="message"
                        required></textarea>
                </div>

                <button
                    type="submit"
                    class="mt-6 px-6 py-3 text-white bg-black rounded-lg w-full hover:bg-gray-800"
                >
                    Send
                </button>
            </form>
        </div>
    </div>
</BaseLayout>
